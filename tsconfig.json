{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "bundles/",
    "paths": {
      "@tanbo/formula-runner": [
        "src/public-api.ts"
      ],
      "@tanbo/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "index.ts",
    "src/",
    "test/"
  ]
}
